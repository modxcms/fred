{
  "name": "Fred",
  "lowCaseName": "fred",
  "description": "Frontend Editor",
  "author": "John Peca",
  "version": "3.0.0-rc1",
  "menus": [
    {
      "text": "fred.menu.fred",
      "description": "fred.menu.fred_desc",
      "action": "home",
      "permissions": "fred"
    }
  ],
  "plugins": [
    {
      "name": "Fred",
      "events": [
        "OnWebPagePrerender",
        "OnDocFormPrerender",
        "OnDocFormSave",
        "OnBeforeDocFormSave",
        "OnTemplateRemove",
        "OnTVInputRenderList",
        "OnTVInputPropertiesList",
        "OnManagerPageBeforeRender",
        "OnManagerLogin",
        "OnWebLogin"
      ]
    }
  ],
  "systemSettings": [
    {
      "key": "launcher_position",
      "value": "bottom_left"
    },
    {
      "key": "icon_editor",
      "value": "IconEditor"
    },
    {
      "key": "image_editor",
      "value": "ImageEditor"
    },
    {
      "key": "rte",
      "value": ""
    },
    {
      "key": "element_group_sort",
      "value": "name"
    },
    {
      "key": "element_sort",
      "value": "name"
    },
    {
      "key": "blueprint_category_sort",
      "value": "name"
    },
    {
      "key": "blueprint_sort",
      "value": "name"
    },
    {
      "key": "secret",
      "type": "text-password",
      "value": ""
    },
    {
      "key": "active_class",
      "value": "fred--active"
    },
    {
      "key": "default_enabled",
      "type": "combo-boolean",
      "value": "1"
    },
    {
      "key": "sidebar_open",
      "type": "combo-boolean",
      "value": "0"
    },
    {
      "key": "force_sidebar",
      "type": "combo-boolean",
      "value": "0"
    },
    {
      "key": "logout_url",
      "value": ""
    }
  ],
  "database": {
    "tables": [
      "\\Fred\\Model\\FredBlueprintCategory",
      "\\Fred\\Model\\FredBlueprint",
      "\\Fred\\Model\\FredElementCategory",
      "\\Fred\\Model\\FredElement",
      "\\Fred\\Model\\FredElementOptionSet",
      "\\Fred\\Model\\FredElementRTEConfig",
      "\\Fred\\Model\\FredTheme",
      "\\Fred\\Model\\FredThemedTemplate",
      "\\Fred\\Model\\FredCache",
      "\\Fred\\Model\\FredElementCategoryTemplateAccess",
      "\\Fred\\Model\\FredElementTemplateAccess",
      "\\Fred\\Model\\FredBlueprintCategoryTemplateAccess",
      "\\Fred\\Model\\FredBlueprintTemplateAccess"
    ]
  },
  "build": {
    "scriptsBefore": [
      "before.customevents.php",
      "before.mediasources.php",
      "before.acls.php"
    ],
    "scriptsAfter": [
      "after.defaulttheme.php",
      "after.migration.php"
    ],
    "installValidator": "requirements.php",
    "requires": {
      "gpm": ">=3.0.0",
      "modx": ">=3.0.0-alpha"
    }
  }
}
