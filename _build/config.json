{
  "name": "Fred",
  "lowCaseName": "fred",
  "description": "Frontend Editor",
  "author": "John Peca",
  "version": "1.0.0-beta3",
  "package": {
    "menus": [
      {
        "text": "fred.menu.fred",
        "description": "fred.menu.fred_desc",
        "action": "home"
      },
      {
        "text": "fred.menu.refresh",
        "description": "fred.menu.refresh_desc",
        "parent": "fred.menu.fred",
        "handler": "var topic=\"/fred/mgr/generate/refresh/\";this.console=MODx.load({xtype:\"modx-console\",register:\"mgr\",topic:topic,show_filename:0}),this.console.show(Ext.getBody()),MODx.Ajax.request({url:MODx.config.assets_url+\"components/fred/connector.php\",params:{action:\"mgr/generate/refresh\",register:\"mgr\",topic:topic},listeners:{success:{fn:function(){this.console.fireEvent(\"complete\"),this.console=null},scope:this}}});",
        "action": ""
      }
    ],
    "elements": {
      "plugins": [
        {
          "name": "Fred",
          "file": "Fred.php",
          "events": [
            "OnWebPagePrerender",
            "OnDocFormPrerender",
            "OnDocFormSave",
            "OnBeforeDocFormSave"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "elements_category_id",
        "value": ""
      },
      {
        "key": "template_ids",
        "value": ""
      },
      {
        "key": "launcher_position",
        "value": "bottom_left"
      },
      {
        "key": "icon_editor",
        "value": "IconEditor"
      },
      {
        "key": "image_editor",
        "value": "ImageEditor"
      },
      {
        "key": "rte",
        "value": ""
      },
      {
        "key": "rte_config",
        "value": ""
      },
      {
        "key": "element_group_sort",
        "value": "name"
      },
      {
        "key": "blueprint_category_sort",
        "value": "name"
      },
      {
        "key": "blueprint_sort",
        "value": "name"
      },
      {
        "key": "default_element",
        "value": ""
      },
      {
        "key": "generated_images_path",
        "value": "{assets_path}/fred/generated"
      },
      {
        "key": "generated_images_url",
        "value": "{assets_url}/fred/generated"
      }
    ]
  },
  "database": {
    "tables": [
      "FredBlueprintCategory",
      "FredBlueprint",
      "FredElementCategory",
      "FredElement",
      "FredElementOptionSet",
      "FredElementRTEConfig",
      "FredTheme",
      "FredThemedTemplate"
    ]
  },
  "build": {
    "resolver": {
      "before": [
        "resolve.customevents.php",
        "resolve.mediasources.php"
      ],
      "after": [
        "resolve.synctables.php",
        "resolve.defaulttheme.php",
        "resolve.migration.php"
      ]
    }
  }
}
